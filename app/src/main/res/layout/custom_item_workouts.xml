<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/costum_item_details_workout">

    <TextView
        android:id="@+id/workout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/workout_info_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_date"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/workout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_time_blue"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/workout_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_distance_green"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/workout_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_calories_red"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="TextView" />
    </LinearLayout>
</RelativeLayout>