<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingBottom="50dp">


        <TextView
            android:id="@+id/signup_access_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/access_data"
            android:textSize="30sp" />

        <RelativeLayout
            android:id="@+id/profile_layout_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/signup_profile_username_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/username" />


            <EditText
                android:id="@+id/signup_profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_profile_username_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="@string/username"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/signup_profile_password_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/password" />

            <EditText
                android:id="@+id/signup_profile_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_profile_password_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/signup_profile_confirm_password_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/confirm_password" />


            <EditText
                android:id="@+id/signup_profile_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_profile_confirm_password_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_check_password"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />
        </RelativeLayout>

        <Button
            android:id="@+id/signup_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_boot_app"
            android:drawableStart="@drawable/ic_login"
            android:drawablePadding="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="20dp"
            android:paddingBottom="15dp"
            android:text="@string/login"
            android:textColor="@android:color/background_light" />

        <LinearLayout
            android:id="@+id/snake"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>
</ScrollView>