<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ScrollView">

    <LinearLayout style="@style/LinearLayout">

        <TextView
            android:id="@+id/signup_access_data"
            style="@style/TitlesSignUp"
            android:text="@string/access_data" />

        <RelativeLayout
            android:id="@+id/profile_layout_username"
            style="@style/RelativeLayout">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/username">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_profile_username"
                    style="@style/EditTextTheme.Text"
                    android:drawableStart="@drawable/ic_user"/>

            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_password"
            style="@style/RelativeLayout">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_profile_password"
                    style="@style/EditTextTheme.Password"
                    android:drawableStart="@drawable/ic_password" />

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_confirm_password"
            style="@style/RelativeLayout">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/confirm_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_profile_confirm_password"
                    style="@style/EditTextTheme.Password"
                    android:drawableStart="@drawable/ic_check_password"/>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup_login"
            style="@style/ButtonTheme"
            android:text="@string/rec"
            app:icon="@drawable/ic_sign_up" />

    </LinearLayout>
</ScrollView>