<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/profile_layout_name_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/img_profile"
                app:srcCompat="@drawable/ic_user_empty" />

            <RelativeLayout
                android:id="@+id/profile_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/profile_img">

                <TextView
                    android:id="@+id/profile_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_name_title"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/textview_rounded_corners"
                    android:drawablePadding="20dp"
                    android:paddingStart="15dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@android:color/background_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/profile_layout_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout_name"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/profile_img">

                <TextView
                    android:id="@+id/profile_lastname_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/lastname" />

                <TextView
                    android:id="@+id/profile_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_lastname_title"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/textview_rounded_corners"
                    android:drawablePadding="20dp"
                    android:paddingStart="15dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@android:color/background_light" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/profile_gender_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/profile_gender"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/gender" />


            <TextView
                android:id="@+id/profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_gender_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/profile_birth_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/profile_birth_date"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/birth_date" />


            <TextView
                android:id="@+id/profile_birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_birth_date_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/profile_email_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/profile_email"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/email" />


            <TextView
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_email_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/profile_city_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/profile_city"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/city" />


            <TextView
                android:id="@+id/profile_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_city_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_city"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/profile_tel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/tel" />


            <TextView
                android:id="@+id/profile_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_tel_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/profile_height_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/profile_height"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/height" />


            <TextView
                android:id="@+id/profile_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_height_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_height"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>