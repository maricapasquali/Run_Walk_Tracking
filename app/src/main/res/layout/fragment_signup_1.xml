<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/signup_personal_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/personal_data"
            android:textSize="30sp" />

        <RelativeLayout
            android:id="@+id/profile_layout_name_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/signup_profile_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/img_profile"
                app:srcCompat="@drawable/ic_user_empty" />

            <RelativeLayout
                android:id="@+id/profile_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/signup_profile_img">

                <TextView
                    android:id="@+id/signup_profile_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/signup_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signup_profile_name_title"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/textview_rounded_corners"
                    android:drawablePadding="20dp"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@android:color/background_light"
                    android:textColorHint="@android:color/background_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/profile_layout_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout_name"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/signup_profile_img">

                <TextView
                    android:id="@+id/signup_profile_lastname_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/lastname" />

                <EditText
                    android:id="@+id/signup_profile_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signup_profile_lastname_title"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/textview_rounded_corners"
                    android:drawablePadding="20dp"
                    android:hint="@string/lastname"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@android:color/background_light"
                    android:textColorHint="@android:color/background_light" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/signup_profile_birth_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/birth_date" />


            <EditText
                android:id="@+id/signup_profile_birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_profile_birth_date_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners_with_press_state"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="20dp"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="@string/birth_date"
                android:inputType="date"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:textCursorDrawable="@null"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/signup_profile_email_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/email" />


            <EditText
                android:id="@+id/signup_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_profile_email_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/signup_profile_city_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/city" />


            <EditText
                android:id="@+id/signup_profile_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_profile_city_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_city"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="@string/city"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/signup_profile_tel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/tel" />


            <EditText
                android:id="@+id/signup_profile_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_profile_tel_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_corners"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="@string/tel"
                android:inputType="phone"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>