<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ScrollView">

    <LinearLayout style="@style/LinearLayout">

        <RelativeLayout
            android:id="@+id/profile_layout_img"
            style="@style/RelativeLayout">

            <view
                android:id="@+id/profile_img_layout"
                class="com.run_walk_tracking_gps.gui.components.Factory$CustomImageProfile"
                style="@style/ImageProfileTheme"
                app:take_photo="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_name"
            style="@style/RelativeLayout">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/modify_profile_name"
                    style="@style/EditTextTheme.Text"/>
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_lastname"
            style="@style/RelativeLayout">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/lastname">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/modify_profile_lastname"
                    style="@style/EditTextTheme.Text" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_gender"
            style="@style/RelativeLayout">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/gender">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/modify_profile_gender"
                    style="@style/EditTextTheme.None"
                    android:drawableStart="@drawable/ic_gender" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_birth_date"
            style="@style/RelativeLayout">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/birth_date">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/modify_profile_birth_date"
                    style="@style/EditTextTheme.None"
                    android:drawableStart="@drawable/ic_calendar" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_email"
            style="@style/RelativeLayout">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/modify_profile_email"
                    style="@style/EditTextTheme.Email"
                    android:drawableStart="@drawable/ic_email" />
            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_city"
            style="@style/RelativeLayout">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/city">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/modify_profile_city"
                    style="@style/EditTextTheme.Text"
                    android:drawableStart="@drawable/ic_city" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_tel"
            style="@style/RelativeLayout">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/tel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/modify_profile_tel"
                    style="@style/EditTextTheme.Phone"
                    android:drawableStart="@drawable/ic_phone" />
            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout_height"
            style="@style/RelativeLayout">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextLayoutTheme"
                android:hint="@string/height">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/modify_profile_height"
                    style="@style/EditTextTheme.None"
                    android:drawableStart="@drawable/ic_height" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>